{
  "name": "nh-bill-linker",
  "version": "1.0.0",
  "description": "Chrome extension to auto-populate form inputs from URL parameters",
  "scripts": {
    "build": "npm run update-hash && tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "update-hash": "node scripts/update-manifest-hash.js",
    "screenshot": "node scripts/capture-screenshot.js",
    "package": "rm -f ../nhbilllinker.zip && cd .. && zip -r nhbilllinker.zip nhbilllinker -x '*/node_modules/*' '*/.git/*' '*/.*'"
  },
  "devDependencies": {
    "playwright": "^1.57.0",
    "typescript": "^5.3.3"
  }
}
