{
  "manifest_version": 3,
  "name": "NH Bill Linker",
  "version": "1.0.0",
  "description": "Auto-populate form inputs from URL parameters on gc.nh.gov",
  "icons": {
    "16": "icons/icon-16.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://gc.nh.gov/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/injected.js"],
      "matches": ["https://gc.nh.gov/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gc.nh.gov/*"
      ],
      "js": [
        "dist/content-script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "NH Bill Linker Settings"
  },
  "options_page": "settings.html"
}
